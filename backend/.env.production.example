# Backend Production Environment Variables
# Copy to .env or set via fly secrets

# ===========================================
# REQUIRED FOR PRODUCTION
# ===========================================

# Set to false in production
DEV_MODE=false

# Database - Use Supabase connection string
# Format: postgres://user:password@host:port/database
# Get this from Supabase Dashboard > Settings > Database > Connection string
DATABASE_URL=postgres://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# Supabase Configuration
# Get these from Supabase Dashboard > Settings > API
SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_JWT_SECRET=your-supabase-jwt-secret

# Security - MUST CHANGE IN PRODUCTION
# Generate with: openssl rand -hex 32
SECRET_KEY=your-super-secret-production-key

# CORS - Your Netlify frontend URL(s)
# Can be comma-separated for multiple origins
CORS_ORIGINS=https://your-app.netlify.app,https://your-custom-domain.com

# ===========================================
# OPTIONAL
# ===========================================

# Discord Bot (if using Discord integration)
DISCORD_BOT_TOKEN=
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# OAuth via Supabase (configured in Supabase dashboard)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Session settings
SESSION_EXPIRE_DAYS=7

# Draft settings
DEFAULT_TIMER_SECONDS=90
ANONYMOUS_SESSION_EXPIRE_DAYS=7

# Sprite CDN (defaults work fine)
SPRITE_BASE_URL=https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon
DEFAULT_SPRITE_STYLE=official-artwork
